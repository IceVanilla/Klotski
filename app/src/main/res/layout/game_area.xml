        android:layout_marginTop="@dimen/game_spacing_two"
        android:text="@string/game_name_huangzhong"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Guany"
        style="@style/piece"
        android:layout_width="@dimen/game_spacing_two"
        android:layout_height="@dimen/game_spacing_one"
