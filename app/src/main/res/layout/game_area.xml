    <TextView
        android:id="@+id/Zu1"
        style="@style/piece"
        android:layout_width="@dimen/game_spacing_one"
        android:layout_height="@dimen/game_spacing_one"
        android:layout_marginStart="@dimen/game_spacing_zero"
        android:layout_marginTop="@dimen/game_spacing_four"
        android:text="@string/game_name_bing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Zu2"
        style="@style/piece"
